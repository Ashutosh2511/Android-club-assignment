<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashutoshkumar.assignment2.MainActivity">


    <EditText
        android:id="@+id/regNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="eg. 1074"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignTop="@+id/output"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:alpha="0.5"
        android:background="#00ff00"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="italic"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/regNo"
        android:layout_alignEnd="@+id/regNo"
        android:layout_marginTop="67dp" />

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="#f5fffa"
        android:alpha="0.6"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_below="@+id/submit"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="66dp" />

    <TextView
        android:id="@+id/macId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regNo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="17dp"
        android:text="e0:98:61:47:ea:85"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/d"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/submit"
        android:layout_alignEnd="@+id/submit" />

</RelativeLayout>
